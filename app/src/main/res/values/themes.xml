<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Yomakase" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#D8D8D8</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

    </style>
    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/dlg_bottom_filter_background</item>
    </style>

    <!-- 카피라이트 -->
    <style name="copyright">
        <item name="android:textSize">11sp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textColor">#5B4B4B</item>
        <item name="fontFamily">@font/nanumgothic_bold</item>
    </style>

    <!-- 로그인화면 요마카세 -->
    <style name="logo_korean">
        <item name="android:textSize">28sp</item>
        <item name="android:letterSpacing">0.61</item>
        <item name="android:textColor">#000000</item>
        <item name="fontFamily">@font/nanumgothic_extrabold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 요즘 오마카세의 모든 것 -->
    <style name="logo_sub_korean">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#F88F8F</item>
        <item name="fontFamily">@font/nanumgothic_bold</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <!-- 로그인 화면 editText 텍스트-->
    <style name="login_email">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#000000</item>
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <!-- 로그인 화면 로그인(회원가입, 이메일 비밀번호 찾기) button 텍스트 -->
    <style name="btn_login_text_style">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/nanumgothic_extrabold</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="join_text">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/nanumgothic_extrabold</item>
    </style>

    <style name="spinner_dropdown_text">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/nanumgothic_bold</item>
    </style>

    <style name="join_small_btn_text">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/nanumgothic_extrabold</item>
        <item name="android:letterSpacing">0.15</item>
    </style>

    <style name="store_explain_text" parent="Widget.Design.TextInputLayout"> // important : parent 를 이것으로.
        <item name="colorControlNormal">@color/et_login_pink</item>  // unFocus 상태일때 밑줄 색.
        <item name="colorControlActivated">@color/theme_pink</item> // Focus 상태일때 밑줄 색.
        <item name="android:textCursorDrawable">@color/black</item>  // cursor 색.
        <item name="android:textAppearance">@style/join_text</item>
        <item name="android:textSize">14sp</item>
        <item name="counterOverflowTextColor">@color/theme_pink</item>
    </style>

    <style name="main_category_text">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/theme_pink</item>
        <item name="fontFamily">@font/nanumgothic_extrabold</item>
    </style>

    <style name="main_more_text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/theme_pink</item>
        <item name="fontFamily">@font/nanumgothic_extrabold</item>
    </style>

    <!-- Main 가게 rv 가게이름 -->
    <style name="main_rv_store_overview_store_name">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/nanumgothic_extrabold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Main 가게 rv 평점 -->
    <style name="main_rv_store_overview_store_grade">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/nanumgothic_extrabold</item>
    </style>

    <!-- Main filter black text -->
    <style name="main_dlg_filter_text_black">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/nanumgothic_extrabold</item>
    </style>

    <!-- Main filter pink text -->
    <style name="main_dlg_filter_text_pink">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/theme_pink</item>
        <item name="fontFamily">@font/nanumgothic_extrabold</item>
    </style>


</resources>