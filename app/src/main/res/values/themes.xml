<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Yomakase" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#D8D8D8</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
    </style>

    <!-- 카피라이트 -->
    <style name="copyright">
        <item name="android:textSize">
            11sp
        </item>
        <item name="android:letterSpacing">
            0.1
        </item>
        <item name="android:textColor">
            #5B4B4B
        </item>
        <item name="fontFamily">
            @font/montserrat_semibold
        </item>
    </style>

    <!-- 로그인화면 요마카세 -->
    <style name="logo_korean">
        <item name="android:textSize">
            28sp
        </item>
        <item name="android:letterSpacing">
            0.61
        </item>
        <item name="android:textColor">
            #000000
        </item>
        <item name="fontFamily">
            @font/nanumgothic_extrabold
        </item>
        <item name="android:textStyle">
            bold
        </item>
    </style>

    <!-- 요즘 오마카세의 모든 것 -->
    <style name="logo_sub_korean">
        <item name="android:textSize">
            16sp
        </item>

        <item name="android:textColor">
            #F88F8F
        </item>
        <item name="fontFamily">
            @font/nanumgothic_bold
        </item>
        <item name="android:letterSpacing">
            -0.02
        </item>
    </style>

    <!-- 로그인 화면 editText 텍스트-->
    <style name="login_email">
        <item name="android:textSize">
            11sp
        </item>
        <item name="android:textColor">
            #000000
        </item>
        <item name="fontFamily">
            @font/montserrat
        </item>
    </style>

    <!-- 로그인 화면 로그인(회원가입, 이메일 비밀번호 찾기) button 텍스트 -->
    <style name="btn_login_text_style">
        <item name="android:textSize">
            13sp
        </item>
        <item name="android:textColor">
            @color/white
        </item>
        <item name="fontFamily">
            @font/montserrat
        </item>
    </style>

    <style name="et_join_text">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/nanumgothic_extrabold</item>
    </style>

</resources>