<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="facility"
            type="com.example.yomakase.model.DialogFacility" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:background="@drawable/et_login"
        android:padding="10dp"
        android:elevation="4dp"
        >

        <ImageView
            android:id="@+id/ivFacility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tv_facility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{facility.name}"
            android:textAppearance="@style/join_text"
            android:textSize="22sp"
            android:layout_marginStart="10dp"
            app:layout_constraintLeft_toRightOf="@id/ivFacility"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/cbPossible"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/checkbox"
            android:button="@null"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>